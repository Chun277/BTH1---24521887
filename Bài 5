#include <iostream>
using namespace std;
bool KiemTraNamNhuan(int nam)// ham kiem tra nam nhuan de biet nam do co phai nam nhuan hay khong
{
    if (nam % 4 == 0)
    {
        if (nam % 100 == 0)
        {
            if (nam % 400 == 0)
            {
                return true;
            }
            return false;
        }
        return true;
    }
    return false;
}
int ngaytrongthang(int thang, int nam)// ham tinh thang nay co may ngay
{
     int ngay;
     switch (thang)
    {
        case 1:
        case 3:
        case 5:
        case 7:
        case 8:
        case 10:
        case 12:
            ngay = 31;
            break;
        case 4:
        case 6:
        case 9:
        case 11:
            ngay = 30;
            break;
        case 2:
            if (KiemTraNamNhuan(nam))
            {
                ngay = 29;
            }
            else
            {
                ngay = 28;
            }
            break;
        default:
            cout << "Thang khong hop le. Vui long nhap thang trong khoang tÆ° 1 den 12 !" << endl;
            return 1;
    }
    return ngay;
}
void ngayketiep(int &ngay, int &thang, int &nam)// ham tim ngay ke tiep 
{
    ngay++;
    if (ngay > ngaytrongthang(thang, nam))
    {
        ngay = 1;
        thang++;
        if (thang > 12)
        {
            thang = 1;
            nam++;
        }
    }
}
void ngaytruocdo(int &ngay, int &thang, int &nam)// ham tim ngay truoc do
{
    ngay--;
    if (ngay == 0)
    {
        thang--;
        if (thang == 0)
        {
            thang = 12;
            nam--;
        }
        ngay = ngaytrongthang(thang, nam);
    }
}
int ngaythumaytrongnam(int ngay, int thang, int nam)// ham tinh ngay nay la ngay thu bao nhieu trong nam
{
    int tongngay = 0;
    for (int i = 1; i < thang; i++) {
        tongngay += ngaytrongthang(i, nam);
    }
    tongngay += ngay;
    return tongngay;
}
int main()
{
    int ngay, thang, nam;
    cout << "Nhap ngay, thang, nam: ";
    cin >> ngay >> thang >> nam;
    if (thang < 1 || thang > 12 || ngay < 1 || ngay > ngaytrongthang(thang, nam))
    {
        cout << "Nhap ngay thang nam khong hop le, vui long nhap lai.\n";
        return 1;
    }
    int ngayke = ngay, thangke = thang, namke = nam;
    ngayketiep(ngayke, thangke, namke);
    cout << "Ngay ke tiep: " << ngayke << "/" << thangke << "/" << namke << endl;
    int ngaytruoc = ngay, thangtruoc = thang, namtruoc = nam;
    ngaytruocdo(ngaytruoc, thangtruoc, namtruoc);
    cout << "Ngay truoc do: " << ngaytruoc << "/" << thangtruoc<< "/" << namtruoc << endl;
    cout << "Ngay " << ngay << "/" << thang << "/" << nam << " la ngay thu " << ngaythumaytrongnam(ngay, thang, nam) << " trong nam\n";
    return 0;
}
