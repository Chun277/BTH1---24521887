#include <iostream>
#include <cmath>
#define PI 3.141592653589793
using namespace std;
double tinhgiaithua(int n)// ham tinh giai thua cua 1 so 
{
    double giaithua = 1;
    for (int i = 1; i <= n; i++)
    {
        giaithua *= i;
    }
    return giaithua;
}
double tinhsinx(double x)// ham tinh sin x theo cong thuc de bai cho
{
    x = fmod(x, 2 * PI);
    if (x > PI) x -= 2 * PI;
    if (x < -PI) x += 2 * PI;
    double tong = 0;
    double tam = x;
    int n = 0;
    do
    {
        tam = pow(-1, n) * pow(x, 2 * n + 1) / tinhgiaithua(2 * n + 1);
        tong += tam;
        n++;
    }
    while (fabs(tam) >= 0.00001);
    return tong;
}
int main()
{
    double x;
    cin >> x;
    double ketqua = tinhsinx(x);
    cout << "Sin(" << x << ") = " << ketqua << endl;
    return 0;
}
